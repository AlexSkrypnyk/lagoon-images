{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
      {
          "datasources": [
              "docker"
          ],
          "updateTypes": [
              "patch"
          ],
          "packageNames": [
              "library/php"
          ],
          "groupName": "PHP patch updates"
      },
      {
          "datasources": [
              "docker"
          ],
          "updateTypes": [
              "patch"
          ],
          "packageNames": [
              "library/python"
          ],
          "groupName": "Python patch updates"
      },
      {
          "datasources": [
              "docker"
          ],
          "updateTypes": [
              "minor"
          ],
          "packageNames": [
              "library/node"
          ],
          "groupName": "Node patch updates"
      },
      {
          "datasources": [
              "docker"
          ],
          "updateTypes": [
              "major", "minor"
          ],
          "packageNames": [
              "library/php", "library/node", "library/python"
          ],
          "enabled": false
      },   
      {
          "datasources": [
              "docker"
          ],
          "excludePackageNames": [
              "library/php", "library/node", "library/python"
          ],
          "groupName": "All other updates"
      } 
  ]
}
