{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "packageRules": [
      {
          "datasources": [
              "docker"
          ],
          "updateTypes": [
              "patch"
          ],
          "packageNames": [
              "php"
          ],
          "groupName": "PHP patch updates"
      },
      {
          "datasources": [
              "docker"
          ],
          "updateTypes": [
              "major", "minor"
          ],
          "packageNames": [
              "php"
          ],
          "enabled": false
      },   
      {
          "datasources": [
              "docker"
          ],
          "excludePackageNames": [
              "php"
          ],
          "groupName": "All other updates"
      } 
  ]
}
