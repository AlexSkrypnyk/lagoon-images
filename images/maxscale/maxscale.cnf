[maxscale]
threads=2
logdir=/maxscale/logs
datadir=/maxscale/data
cachedir=/maxscale/cache
piddir=/maxscale/run

[MasterOnly Service 3306]
type=service
router=readconnroute
router_options=master
servers=database1,database2,database3
user=root
passwd=blah
localhost_match_wildcard_host=1

[MasterOnly Listener 3306]
type=listener
service=MasterOnly Service 3306
protocol=MySQLClient
address=127.0.0.1
port=3306

[Galera Monitor]
type=monitor
module=galeramon
servers=database1,database2,database3
user=root
passwd=blah


[CLI]
type=service
router=cli

[CLI Listener]
type=listener
service=CLI
protocol=maxscaled
address=localhost
port=6603

[database1]
type=server
address=mariadb-0.mariadb
port=3306
protocol=MySQLBackend

[database2]
type=server
address=mariadb-1.mariadb
port=3306
protocol=MySQLBackend

[database3]
type=server
address=mariadb-2.mariadb
port=3306
protocol=MySQLBackend
